<div class="container mt-3">
  <h1>Lists</h1>
  <ul>
  <% @lists.each do |list| %>
    <li>
      <h2><%= list.name %></h2>
      <% if list.photo.attached? %>
        <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>

      <%= link_to 'See Details', list_path(list), class: 'btn btn-secondary' %>
    </li>
  <% end %>
  </ul>
  <div>
    <%= link_to 'Add List', new_list_path, class: 'btn btn-primary' %>
  </div>
</div>
